  "screenshots": [
    {
      "src": "assets/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard view showing visitor statistics and quick actions"
    },
    {
      "src": "assets/screenshots/mobile-scanner.png",
      "sizes": "360x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "QR code scanner for quick visitor check-in"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Scan",
      "short_name": "Scan",
      "description": "Open QR code scanner for quick check-in",
      "url": "/?action=scan",
      "icons": [
        {
          "src": "assets/icons/scan-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View system dashboard",
      "url": "/?page=dashboard",
      "icons": [
        {
          "src": "assets/icons/dashboard-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Visitors",
      "short_name": "Visitors",
      "description": "Manage visitors and view history",
      "url": "/?page=visitors",
      "icons": [
        {
          "src": "assets/icons/visitors-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "Generate visitor and gate reports",
      "url": "/?page=reports",
      "icons": [
        {
          "src": "assets/icons/reports-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "protocol_handlers": [
    {
      "protocol": "web+gatepass",
      "url": "/?action=handle&data=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".csv", ".xlsx"]
        }
      ]
    }
  }
}